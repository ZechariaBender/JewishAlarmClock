<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pref_content">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="repeat"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:summary="%s"
        android:title="@string/repeat" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="vibrate_switch"
        android:summary="@string/vibration_summary"
        android:title="@string/vibration" />
    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:key="alarmtone"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/alarmtone" />
    <SeekBarPreference
        android:defaultValue="5"
        android:key="volume"
        android:max="10"
        android:title="Volume" />
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="@string/default_label_name"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/label" />
</PreferenceScreen>
